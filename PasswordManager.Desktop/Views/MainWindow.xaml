<Window x:Class="PasswordManager.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:PasswordManager.Desktop.ViewModels"
        xmlns:views="clr-namespace:PasswordManager.Desktop.Views"
        xmlns:converters="clr-namespace:PasswordManager.Desktop.Converters"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="700" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Local Converters (in case global ones don't load) -->
        <converters:BoolToVisibilityConverter x:Key="LocalBoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="LocalInverseBoolToVisibilityConverter"/>
        <converters:PremiumTextConverter x:Key="LocalPremiumTextConverter"/>
        
        <!-- DataTemplates for ViewModels -->
        <DataTemplate DataType="{x:Type viewmodels:VaultViewModel}">
            <views:VaultView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewmodels:SettingsViewModel}">
            <views:SettingsView />
        </DataTemplate>

        <!-- Navigation Button Style -->
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#424242"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="5"
                                Margin="5">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsPressed, RelativeSource={RelativeSource Self}}" Value="True">
                    <Setter Property="Background" Value="#BBDEFB"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar -->
        <Border Grid.Column="0" 
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- App Header -->
                <Border Grid.Row="0" 
                        Background="#1976D2"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="ðŸ” Password Manager" 
                                 Foreground="White"
                                 FontSize="18"
                                 FontWeight="Bold"
                                 HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding UserEmail}" 
                                 Foreground="#E3F2FD"
                                 FontSize="12"
                                 HorizontalAlignment="Center"
                                 Margin="0,5,0,0"/>
                        
                        <!-- Premium Badge -->
                        <Border Margin="0,5,0,0"
                                HorizontalAlignment="Center">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsPremium}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Border Background="#FFC107"
                                    CornerRadius="10"
                                    Padding="8,3">
                                <TextBlock Text="â­ PREMIUM" 
                                         Foreground="White"
                                         FontSize="10"
                                         FontWeight="Bold"/>
                            </Border>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Navigation Menu -->
                <StackPanel Grid.Row="1" 
                            Margin="10,20,10,10">
                    
                    <Button Command="{Binding NavigateToVaultCommand}"
                            Style="{StaticResource NavButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ—ï¸" FontSize="18" Margin="0,0,10,0"/>
                            <TextBlock Text="My Vault" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding NavigateToSettingsCommand}"
                            Style="{StaticResource NavButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš™ï¸" FontSize="18" Margin="0,0,10,0"/>
                            <TextBlock Text="Settings" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Separator Margin="10,20"/>

                    <TextBlock Text="QUICK ACTIONS" 
                             Foreground="Gray"
                             FontSize="11"
                             FontWeight="SemiBold"
                             Margin="15,10,0,10"/>

                    <Button Command="{Binding LockCommand}"
                            Style="{StaticResource NavButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”’" FontSize="18" Margin="0,0,10,0"/>
                            <TextBlock Text="Lock Vault" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Bottom Actions -->
                <StackPanel Grid.Row="2" 
                            Margin="10,10,10,20">
                    <Separator Margin="10,0,10,10"/>
                    
                    <Button Command="{Binding LogoutCommand}"
                            Style="{StaticResource NavButton}"
                            Foreground="#D32F2F">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸšª" FontSize="18" Margin="0,0,10,0"/>
                            <TextBlock Text="Logout" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <!-- Main Content Area -->
        <Border Grid.Column="1" 
                Background="#FAFAFA">
    
            <!-- Content only - no debug panel -->
            <ContentControl Content="{Binding CurrentViewModel}"
                            Margin="0">
                <!-- Fallback content if binding fails -->
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Style.Triggers>
                            <Trigger Property="Content" Value="{x:Null}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate>
                                            <Border Background="White" 
                                                    Padding="40"
                                                    Margin="20">
                                                <StackPanel HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center">
                                                    <TextBlock Text="âš ï¸" 
                                                             FontSize="48" 
                                                             HorizontalAlignment="Center"
                                                             Margin="0,0,0,20"/>
                                                    <TextBlock Text="No Content Loaded" 
                                                             FontSize="20" 
                                                             FontWeight="SemiBold"
                                                             HorizontalAlignment="Center"
                                                             Margin="0,0,0,10"/>
                                                    <TextBlock Text="CurrentViewModel is null" 
                                                             FontSize="14" 
                                                             Foreground="Gray"
                                                             HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
        </Border>
    </Grid>
</Window>
